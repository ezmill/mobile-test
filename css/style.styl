@import 'jeet'
@import 'rupture'
@import url(http://fonts.googleapis.com/css?family=PT+Mono);
@import url(http://fonts.googleapis.com/css?family=Oswald:700);

// edit()
html, body
	padding 0
	margin 0
	width 100%
	height 100%
body
	
	background-color rgba(0,0,0,0.5)
	font-family 'PT Mono', sans-serif
	+mobile()
		background-color #FFFFFF
h1
	stack()
	font-family: 'Oswald', sans-serif;
	font-style: bold;
	color: rgba(0,0,0,0.5);
	text-shadow:5px 5px 0px #FFF;
	font-size: 128px;
	z-index: -1;
	top: 0px
	position absolute
div#main
	col(3/4)
	top: 170px;
	left: 50;
	+below(600px)
		color: red
	position absolute
div#box
	background-color black
	position absolute
	
div#colors
	position: absolute;
	top: 100px;
	right: 50px; 
div#colors div{
	width:50px;
	height:50px;
	display:inline-block;
	border-radius: 100px;
	margin: 10px;

}
span{
	color: white;
	font-size: 24px;
	margin: 10px;
	text-shadow: 1.5px #000;

}
a{
	color: inherit;
	text-decoration: none;
}
a:hover{
	text-decoration: underline;
}
canvas
	display inline-block

.para{
	color: white;
	margin: 20px;
}
.white {
	background-color: white;
}
.red{
	background-color: rgb(255,0,0);
}
.green{
	background-color: rgb(0,255,0);
}
.blue{
	background-color: rgb(0,0,255);
}

.clicked{
	border: solid 2.5px white;
}
.white-clicked{
	border: solid 2.5px black;
}
.link-clicked{
	text-decoration: underline;
}

